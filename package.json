{
  "name": "european-tour",
  "version": "1.0.0",
  "private": true,
  "description": "Проект Путешествие в Европу",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.12",
    "gulp": "^4.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "stylelint": "^13.6.1",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "scripts": {
